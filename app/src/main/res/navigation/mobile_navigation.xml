<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.zwt.charsboard.ui.top.TopFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_top" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.zwt.charsboard.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.zwt.charsboard.ui.walkthrough.WalkthroughFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_walkthrough" >
        <action
            android:id="@+id/action_nav_slideshow_to_walkDetailFragment"
            app:destination="@id/walkDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/walkDetailFragment"
        android:name="com.zwt.charsboard.ui.walkthrough.WalkDetailFragment"
        android:label="fragment_walk_detail"
        tools:layout="@layout/fragment_walk_detail" />

    <fragment
        android:id="@+id/nav_book"
        android:name="com.zwt.charsboard.ui.bookshelf.BookFragment"
        android:label="@string/menu_book"
        tools:layout="@layout/fragment_book_list" />
</navigation>